{
  "name": "mcpflare",
  "version": "1.2.6",
  "description": "Use local MCP servers securely with zero-trust isolation while reducing context window token usage by up to 98%.",
  "type": "module",
  "main": "dist/server/index.js",
  "types": "dist/server/index.d.ts",
  "bin": {
    "mcpflare": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx src/server/index.ts",
    "cli": "tsx src/cli/index.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:ci": "vitest run --reporter=dot",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:security": "vitest run tests/security",
    "cleanup:test-configs": "tsx scripts/cleanup-test-configs.ts",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "worker:dev": "npx wrangler dev",
    "version": "node scripts/sync-vscode-extension-version.js && git add vscode-extension/package.json",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "cloudflare-workers",
    "code-mode",
    "security",
    "isolation",
    "sandbox",
    "model-context-protocol"
  ],
  "author": "Forged Apps",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/forgedapps/mcpflare.git"
  },
  "bugs": {
    "url": "https://github.com/forgedapps/mcpflare/issues"
  },
  "homepage": "https://mcpflare.org",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "dotenv": "^16.3.1",
    "jsonc-parser": "^3.3.1",
    "pino": "^10.1.0",
    "pino-pretty": "^10.2.3",
    "wrangler": "^4.47.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^2.1.9",
    "husky": "^9.1.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "qs": ">=6.14.1",
    "esbuild": ">=0.25.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}
